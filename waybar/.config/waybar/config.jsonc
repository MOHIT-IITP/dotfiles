  "custom/colorpicker": {
    "format": "Óà´",
    "tooltip": "Pick a color",
    "on-click": "hyprpicker",
    "interval": "once"
  },

  "custom/screenshot": {
    "format": "Û∞πë",
    "tooltip": "Screenshot",
    "on-click-right": "grim ~/pix/ss/screenshot-$(date +%Y%m%d-%H%M%S).png && paplay /usr/share/sounds/freedesktop/stereo/screen-capture.oga",
    "on-click": "grim -g \"$(slurp)\" - | tee ~/pix/ss/$(date +%Y-%m-%d_%H-%M-%S).png | wl-copy && paplay /usr/share/sounds/freedesktop/stereo/screen-capture.oga && notify-send 'Screenshot' 'Saved & Copied to Clipboard'",
  },

  "custom/notify": {
    "format": "ÔÉ≥",
    "on-click": "swaync-client -t",
  },

  "clock": {
    "format": "{:%I:%M}",
    "format-alt": "{:%A, %B %d, %Y}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "interval": 60
  },

  "cpu": {
    "format": "Û∞òö {usage}% ",
    "tooltip": true,
    "interval": 2
  },

  "memory": {
    "format": "Û∞çõ {}% ",
    "interval": 2
  },

  "network": {
    "format-wifi": "{essid} ({signalStrength}%) Û∞ñ©",
    "format-ethernet": "Net",
    "tooltip-format": "{ifname} via {gwaddr}",
    "format-linked": "{ifname} (No IP) Û∞àÄ",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "on-click-right": "nm-connection-editor"
  },
  "custom/powermenu": {
    "format": "",
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/powermenu.sh",
    "interval": 0
  },
  "custom/cava-music": {
    "exec": "$HOME/.config/hypr/scripts/WaybarCava.sh",
    "format": "{}"
  },

  "custom/playerctl": {
    "format": "{}",
    "escape": true,
    "return-type": "json", 
    "max-length": 10,
    "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null",
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl stop",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "smooth-scrolling-threshold": 1,
    "tooltip": false
  },

  "pulseaudio": {
    "format": "{icon} {volume}% ",
    "format-bluetooth": "{volume}% {icon} Û∞ÇØ",
    "format-bluetooth-muted": "Û∞Ç≤ Û∞ñÅ {icon}",
    "format-muted": "Û∞ñÅ  {volume}%",
    "format-icons": {
      "headphone": "Û∞ãã ",
      "hands-free": "Û∞ãé ",
      "headset": "Û∞ãé ",
      "phone": "Û∞è≤ ",
      "portable": "Û∞Ñù ",
      "car": "Û∞Ñã ",
      "default": ["Û∞ïø ", "Û∞ñÄ ", "Û∞ïæ "]
    },
    "on-click": "pavucontrol",
    "on-click-middle": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },
  "power-profiles-daemon": {
  "format": "{icon}",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true,
  "format-icons": {
    "default": "ÔÉß",
    "performance": "ÔÉß",
    "balanced": "Ôâé",
    "power-saver": "ÔÅ¨"
  }
},

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "Û∞ç¨ {volume}%",
    "format-source-muted": "Û∞ç≠ {volume}%",
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-right": "pavucontrol",
    "tooltip": true,
    "tooltip-format": "{format_source}",
    "scroll-step": 5
  },
  "custom/cputemp": {
    "format": "üå°Ô∏è {}¬∞C",
    "exec": "sensors | awk '/Tctl:/ {gsub(/\\+|¬∞C/, \"\", $2); print $2}'",
    "interval": 5,
    "return-type": "plain"
  },



  "bluetooth": {
    "format": "Ôäî {status}",
