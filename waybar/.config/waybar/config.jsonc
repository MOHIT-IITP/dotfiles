{
  "layer": "top",
  "position": "top",
  "height": 20,
  "output": ["HDMI-A-1"],
  "margin-top": 10,
 "margin-bottom": 5,
  "margin-left": 10,
  "margin-right": 10,

  "modules-left": ["clock"],
  "modules-center": ["hyprland/workspaces", "power-profiles-daemon"],
  "modules-right": ["pulseaudio", "pulseaudio#microphone", "custom/screenshot", "custom/notify"],

  "hyprland/workspaces": {
